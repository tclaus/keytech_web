<% meta_tag :page_title,page_title + ' - Admin Userlist' %>
<%= t('.total_users') %>
<%= @users.count %>
<br>
<div class="table-responsive">
  <table class="table table-striped">
      <tr>
       <th scope="col">ID</th>
       <th scope="col">Email</th>
       <th scope="col">Angelegt am</th>
       <th scope="col"></th>
      </tr>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= mail_to user.email %></td>
          <td><%= user.created_at %></td>
          <td>
            <%  if user.id == current_user.id %>
              <i class="far fa-trash-alt disabled "></i>
            <% else %>
            <%= link_to user_path(user), method: :delete, data: { confirm: "Diesen Benutzer wirklich lÃ¶schen?" } do %>
              <i class="far fa-trash-alt"></i>
            <% end %>
            <% end %>

          </td>
        </tr>
      <% end %>
    </table>

</div>
