<div class="row">
  <div class="col-md-4 offset-md-4">

    <h2 class="text-center"><%= t('.sign_in') %></h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, placeholder: :email, autofocus: true, autocomplete: "email", class:"form-control" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, placeholder: :password,autocomplete: "off", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.label :remember_me do %>
            <%= f.check_box :remember_me %>
            <%= t(:remember_me) %>
          <% end %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit t('.sign_in'), class:"btn btn-lg btn-primary btn-block" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
